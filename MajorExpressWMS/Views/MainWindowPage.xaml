<Page
    x:Class="MajorExpressWMS.Views.MainWindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MajorExpressWMS.Views"
    mc:Ignorable="d"
    d:DesignWidth="300" d:DesignHeight="125"
    Title="MainWindowPage"
>

    <Grid x:Name="MainWindowPageGrid" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Width="300" Height="125">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="LogInButton" Content="Войти" Margin="5" FontSize="16" Click="LogInButton_Click"/>
        <Button x:Name="RegistrationButton" Grid.Row="1" Content="Зарегистрироваться" Margin="5" FontSize="16" Click="RegistrationButton_Click"/>

    </Grid>

</Page>